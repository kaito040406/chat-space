.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        テスト
      %ul.main-header__left-box__menber-list
        Menber :kaitohasegawa
        %li.main-header__left-box__menber-list__menber
    = link_to "/groups/#{@message}/edit", class: "main-header__edit-btn" , method: :get  do
      %span<>
        Edit
  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker
          kaitohasegawa
        %p.message__upper-info__date
          2019/09/26(Thu) 14:07:09
      %p.message__text
        テスト投稿
  .form
    %form.new_message
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :body, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image' do
            = fa_icon 'picture-o', class: 'fa-image'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'submit-btn', method: :post
        

       
